      </div>
      <div class="form-group">
        <%= form.label :nome, style: "display: block" %>
        <%= form.text_field :nome, class:"form-control" ,id:"exampleInputEmail1", placeholder:"Seu Nome" %>
      </div>
      <div class="form-group">
        <%= form.label :telefone, style: "display: block" %>
        <%= form.number_field :telefone, class:"form-control" ,id:"exampleInputEmail1", placeholder:"Seu email" %>
      </div>
      <div class="form-group">
        <%= form.label :senha, style: "display: block" %>
        <%= form.text_field :senha, class:"form-control" ,id:"exampleInputEmail1", placeholder:"Seu email" %>
      </div>
      <div class="form-group">
        <%= form.submit class:"btn btn-primary"%>
